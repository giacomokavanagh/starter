@model Starter.Models.TestRunner

@{
    ViewData["Title"] = "Edit Test Runner: " + Model.Name;
}

<div>
    <div class="headertwo">
        <h2>@ViewData["Title"]</h2>
    </div>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestRunnerID" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfigurationDetails" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="@Model.ConfigurationDetails" class="form-control textarea" rows="5" />@Model.ConfigurationDetails</textarea>
                    <span asp-validation-for="@Model.ConfigurationDetails" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TestRunnerGroupID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="@Model.TestRunnerGroupID" asp-items="ViewBag.TestRunnerGroups" class="chosen"></select>
                    <span asp-validation-for="@Model.TestRunnerGroupID" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ClearRemoteLogOnNextAccess" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.ClearRemoteLogOnNextAccess">
                    <span asp-validation-for="@Model.ClearRemoteLogOnNextAccess" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TakeScreenshots" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.TakeScreenshots">
                    <span asp-validation-for="@Model.TakeScreenshots" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <hr />

    <div>
        <p>
            <a class="Actions" asp-action="Details" asp-route-id="@Model.TestRunnerID">Back to Test Runner: @Model.Name</a>
        </p>
        <p>
            <a class="Actions" asp-controller="TestRunnerGroups" asp-action="Details" asp-route-id="@Model.TestRunnerGroupID">Back to Test Runner Group: @Model.TestRunnerGroup.Name</a>
        </p>
    </div>
</div>

