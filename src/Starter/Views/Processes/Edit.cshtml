@model Starter.Models.Process

@{
    ViewData["Title"] = "Edit Process: " + Model.Name;
}

<div>
    <div class="headertwo">
        <h2>@ViewData["Title"]</h2>
    </div>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProcessID" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control textarea" rows="5">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IsLocked" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IsLocked" class="form-control thinner" />
                    <span asp-validation-for="IsLocked" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ComponentID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="ComponentID" asp-items="ViewBag.Components" class="chosen"></select>
                    <span asp-validation-for="ComponentID" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <hr />

    <div>
        <p>
            <a asp-controller="Processes" asp-action="Details" asp-route-id="@Model.ProcessID" class="Actions">Back to Process</a>
        </p>
    </div>
</div>
