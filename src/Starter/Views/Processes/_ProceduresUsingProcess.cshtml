@model IEnumerable<ProcessInProcedure>

<div class='panel-group noMargin'>
    <div class='panel panel-default noMargin'>
        <div class='panel-heading'>
            <h3 class='panel-title'>
                <a data-toggle='collapse' id='Toggle' href='#collapseProceduresUsingProcess'>Procedures using Process</a>
            </h3>
        </div>
        @if (Model.Any())
            {
            <div id='collapseProceduresUsingProcess' class='panel-collapse collapsed collapse'>
                <div class='panel-body'>
                    <table id="2ColumnDataTable" class="table table-striped" style="width:100%">
                        <thead id="greyTableheader">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Procedure Name
                                </th>
                            </tr>
                        </thead>
                        <tbody id="ProcessesInProcedureDataRows">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="AvailableMethodtd">
                                        <p class="TableParagraph">
                                            @item.ProcessInProcedureID
                                        </p>
                                    </td>
                                    <td class="AvailableMethodtd">
                                        <p class="SmallPadding">
                                            <a class="Actions" asp-controller="Procedures" asp-route-id="@item.ProcedureID" asp-action="Details">@item.Procedure.Name</a>
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div id='collapseProceduresUsingProcess' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <p>
                        There are currently no Procedures using this Process
                    </p>
                </div>
            </div>
        }
    </div>
</div>