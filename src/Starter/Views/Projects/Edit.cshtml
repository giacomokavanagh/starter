@model Starter.Models.Project

@{
    ViewData["Title"] = "Edit Project: " + Model.Name;
}
<div>
    <div class="headertwo">
        <h2>@ViewData["Title"]</h2>
    </div>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control textarea" rows="5">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TestRunnerGroupID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="@Model.TestRunnerGroupID" data-placeholder="Choose Test Runner Group" class="chosensingledeselect">
                        @foreach (var item in ViewBag.TestRunnerGroups)
                        {
                            @if (item.Value == Model.TestRunnerGroupID.ToString())
                            {
                                <option value="@item.Value" selected="selected">@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="@Model.TestRunnerGroupID" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <hr />

    <div>
        <p>
            <a asp-action="Index" class="Actions">Back to Projects</a>
        </p>
    </div>
</div>
