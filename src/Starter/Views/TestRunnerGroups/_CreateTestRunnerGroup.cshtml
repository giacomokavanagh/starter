@model Starter.Models.TestRunnerGroup

<form method="post" asp-action="Create" asp-controller="TestRunnerGroups" multiple="multiple">
    <div class='panel-group'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>
                    <a data-toggle='collapse' id='Toggle' href='#collapse'>Create Test Runner Group</a>
                </h3>
            </div>
            <div id='collapse' class='panel-collapse collapsed collapse'>
                <div class='panel-body'>
                    <div class="form-horizontal">
                        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="@Model.Name" class="form-control" />
                                <span asp-validation-for="@Model.Name" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Description" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <textarea asp-for="@Model.Description" class="form-control textarea" rows="5"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Projects" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="@Model.Projects" asp-items="ViewBag.Projects" data-placeholder="Choose projects" class="chosen"></select>
                                <span asp-validation-for="@Model.Projects" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Folders" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="@Model.Folders" asp-items="ViewBag.Folders" data-placeholder="Choose folders" class="chosen"></select>
                                <span asp-validation-for="@Model.Folders" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Groups" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="@Model.Groups" asp-items="ViewBag.Groups" data-placeholder="Choose groups" class="chosen"></select>
                                <span asp-validation-for="@Model.Groups" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Runs" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="@Model.Runs" asp-items="ViewBag.Runs" data-placeholder="Choose runs" class="chosen"></select>
                                <span asp-validation-for="@Model.Runs" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
