@model IEnumerable<Starter.Models.TestCase>

<div class='panel-group noMargin'>
    <div class='panel panel-default noMargin'>
        <div class='panel-heading'>
            <h3 class='panel-title'>
                <a data-toggle='collapse' id='Toggle' href='#collapseTestCases'>Test Cases</a>
            </h3>
        </div>
        @if (Model.Any())
        {
            <div id='collapseTestCases' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <table id="3ColumnDataTable" class="table table-striped">
                        <thead id="greyTableheader">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                            </tr>
                        </thead>
                        <tbody id="RightClickTable">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <p class="TableParagraph">@item.TestCaseID</p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">
                                            @item.Name
                                        </p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </p>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        }

        else
        {
            <div id='collapseTestCases' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <p>
                        There are currently no Test Cases for this procedure
                    </p>
                </div>
            </div>
        }

    </div>
</div>

<ul id="contextMenu" class="dropdown-menu" role="menu" style="display:none">
    <li><a tabindex="-1" href="#" name="TestCases">Edit</a></li>
    <li><a tabindex="-1" href="#" name="TestCases">Delete</a></li>
</ul>
