@model IEnumerable<Starter.Models.Step>

<div class='panel-group noMargin'>
    <div class='panel panel-default no-border noMargin'>
        <div class='panel-heading'>
            <h3 class='panel-title'>
                <a data-toggle='collapse' id='Toggle' href='#collapseSteps'>Steps</a>
            </h3>
        </div>

        @if (Model.Any())
        {
            <div id='collapseSteps' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <table id="StepDataTable" class="table table-striped">
                        <thead id="greyTableheader">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().StepID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Method)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Attribute)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Value)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Input)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Order)
                                </th>
                            </tr>
                        </thead>
                        <tbody id="StepDataRows">
                            @foreach (var item in Model)
                            {
                                var stepID = "StepID" + item.ID;
                                var methodID = "MethodID" + item.ID;
                                var attributeID = "AttributeID" + item.ID;
                                var valueID = "ValueID" + item.ID;
                                var inputID = "InputID" + item.ID;
                                var orderID = "OrderID" + item.ID;
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput stepIDInput" name="@item.ID" value="@item.StepID" id="@stepID" />
                                            <p class="hidden">@item.StepID</p>
                                        </div>
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput methodInput" name="@item.ID" value="@item.Method" id="@methodID" />
                                            <p class="hidden">@item.Method</p>
                                        </div>
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput attributeInput" name="@item.ID" value="@item.Attribute" id="@attributeID" />
                                            <p class="hidden">@item.Attribute</p>
                                        </div>
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput valueInput" name="@item.ID" value="@item.Value" id="@valueID" />
                                            <p class="hidden">@item.Value</p>
                                        </div>
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput inputInput" name="@item.ID" value="@item.Input" id="@inputID" />
                                            <p class="hidden">@item.Input</p>
                                        </div>
                                    </td>
                                    <td class="stepTabletd">
                                        <div class="stepTablediv">
                                            <input class="stepTableInput orderInput" name="@item.ID" value="@item.Order" id="@orderID" />
                                            <p class="hidden">@item.Order</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        else
        {
            <div id='collapseSteps' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <p>
                        There are currently no steps
                    </p>
                </div>
            </div>
        }

    </div>
</div>

<ul id="contextMenu" class="dropdown-menu" role="menu" style="display:none">
    <li><a tabindex="-1" href="#" name="Tests">Edit Step</a></li>
    <li><a tabindex="-1" href="#" name="Tests">Delete Step</a></li>
    <li><a tabindex="-1" href="#" name="Tests">Move Step Up</a></li>
    <li><a tabindex="-1" href="#" name="Tests">Move Step Down</a></li>
</ul>