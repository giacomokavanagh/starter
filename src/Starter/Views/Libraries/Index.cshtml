@model Starter.Controllers.LibrariesAndNewLibrary

@{
    ViewData["Title"] = "Libraries";
}
<div>
    <div class="headertwo">
        <h2>Manage @ViewData["Title"]</h2>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div>
            <p class="message">
                @ViewData["Message"]
            </p>
        </div>
    }

    <div class='panel-group'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>
                    <a data-toggle='collapse' id='Toggle' href='#collapseLibraries'>Libraries</a>
                </h3>
            </div>
            @if (Model.Libraries.Any())
            {
                <div id='collapseLibraries' class='panel-collapse collapsed collapse in'>
                    <table id="3ColumnDataTable" class="table table-striped">
                        <thead id="greyTableheader">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Library.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Library.Description)
                                </th>
                            </tr>
                        </thead>
                        <tbody id="RightClickTable">
                            @foreach (var item in Model.Libraries)
                            {
                                <tr>
                                    <td>
                                        <p class="TableParagraph">@item.LibraryID</p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">
                                            <a asp-controller="Libraries" asp-action="Details" asp-route-id="@item.LibraryID" class="Actions">@item.Name</a>
                                        </p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            else
            {
                <div id='collapseLibraries' class='panel-collapse collapsed collapse in'>
                    <div class='panel-body'>
                        <p>
                            There are currently no Libraries
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>

    @Html.Partial("_CreateLibrary", Model.Library)

</div>

<ul id="contextMenu" class="dropdown-menu" role="menu" style="display:none">
    <li><a tabindex="-1" href="#" name="Libraries">Edit</a></li>
    <li><a tabindex="-1" href="#" name="Libraries">Details</a></li>
    <li><a tabindex="-1" href="#" name="Libraries">Delete</a></li>
</ul>