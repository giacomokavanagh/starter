@model Starter.Models.Category

@{
    ViewData["Title"] = "Delete Category: " + Model.Name;
}

<div>
    <div class="headertwo">
        <h2 class="Delete">@ViewData["Title"]</h2>
    </div>
    <div>
        <h3>Are you sure you want to delete this?</h3>
    </div>

    <hr />

    <div>
        @Html.Partial("_CategoryDetailsTable")
        <form asp-action="Delete">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>

    <hr />

    <div>
        <p class="Actions">
            <a asp-action="Index" class="Actions">Back to Categories</a>
        </p>
    </div>
</div>
