@model Starter.Models.Dependency

<form method="post" asp-controller="Dependencies" asp-action="Create">
    <div class='panel-group'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>
                    <a data-toggle='collapse' id='Toggle' href='#collapse'>Create Dependencies</a>
                </h3>
            </div>
            <div id='collapse' class='panel-collapse collapsed collapse'>
                <div class='panel-body'>
                    <div class="form-horizontal">
                        <div>
                            <div class="form-horizontal">
                                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="@Model.TestRunID" class="col-md-4 control-label"></label>
                                    <div class="col-md-10">
                                        <select asp-for="@Model.TestRunID" asp-items="ViewBag.TestRuns" data-placeholder="Choose a test run file" class="chosen" multiple="multiple"></select>
                                        <span asp-validation-for="@Model.TestRunID" class="text-danger" />
                                    </div>
                                </div>
                                <input asp-for="@Model.DependencyGroupID" name="id" type="hidden" readonly="readonly" value="@ViewData["DependencyGroupID"]" />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Add Dependencies" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
