@model IEnumerable<Starter.Models.Dependency>

<div class='panel-group'>
    <div class='panel panel-default'>
        <div class='panel-heading'>
            <h3 class='panel-title'>
                <a data-toggle='collapse' id='Toggle' href='#collapseDependencies'>Dependencies</a>
            </h3>
        </div>

        @if (Model.Any())
        {
            <div id='collapseDependencies' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <table id="3ColumnDataTable" class="table table-striped">
                        <thead id="greyTableheader">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Test Name
                                </th>
                                <th>
                                    Test Run ID
                                </th>
                            </tr>
                        </thead>

                        <tbody id="RightClickTable">

                            @foreach (var item in Model)
                            {
                                var test = item.TestRun.Test;
                                <tr>
                                    <td>
                                        <p class="TableParagraph">@item.DependencyID</p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">@item.TestRun.Test.Name</p>
                                    </td>
                                    <td>
                                        <p class="TableParagraph">
                                            <a asp-controller="TestRuns" asp-action="Details" asp-route-id="@item.TestRunID" class="Actions">@item.TestRunID</a>
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        else
        {
            <div id='collapseGroups' class='panel-collapse collapsed collapse in'>
                <div class='panel-body'>
                    <p>
                        There are currently no dependencies
                    </p>
                </div>
            </div>
        }

    </div>
</div>

<ul id="contextMenu" class="dropdown-menu" role="menu" style="display:none">
    <li><a tabindex="-1" href="#" name="Dependencies">Edit</a></li>
    <li><a tabindex="-1" href="#" name="Dependencies">Delete</a></li>
</ul>
