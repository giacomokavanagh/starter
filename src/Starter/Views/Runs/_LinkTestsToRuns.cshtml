@model Starter.Controllers.ProjectAndFolderAndGroupAndRunAndTestsAndTestRun

<form method="post" asp-controller="Runs" asp-action="LinkTestsToRuns">
    <div class='panel-group'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>
                    <a data-toggle='collapse' id='Toggle' href='#collapse'>Link Tests To Runs</a>
                </h3>
            </div>
            <div id='collapse' class='panel-collapse collapsed collapse'>
                <div class='panel-body'>
                    <div class="form-horizontal">
                        <div>
                            <div class="form-horizontal">
                                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="@Model.Run.Tests" class="col-md-4 control-label"></label>
                                    <div class="col-md-10">
                                        <select asp-for="@Model.Run.Tests" asp-items="ViewBag.tests" data-placeholder="Choose some tests" class="chosen" multiple="multiple"></select>
                                        <span asp-validation-for="@Model.Run.Tests" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.TestRun.TestEnvironmentID" class="col-md-4 control-label"></label>
                                    <div class="col-md-10">
                                        <select asp-for="@Model.TestRun.TestEnvironmentID" asp-items="ViewBag.testEnvironments" data-placeholder="Choose an environment file" class="chosen"></select>
                                        <span asp-validation-for="@Model.TestRun.TestEnvironmentID" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.TestRun.Browser" class="col-md-4 control-label"></label>
                                    <div class="col-md-10">
                                        <select asp-for="@Model.TestRun.Browser" asp-items="ViewBag.browsers" data-placeholder="Choose a browser" class="chosen" multiple="multiple"></select>
                                        <span asp-validation-for="@Model.TestRun.Browser" class="text-danger" />
                                    </div>
                                </div>
                                <input name="Status" type="hidden" readonly="readonly" value="Unassigned" />
                                <input name="ResultFile" type="hidden" readonly="readonly" value="None" />
                                <input name="id" type="hidden" readonly="readonly" value="@Model.Run.RunID" />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Add Tests" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>