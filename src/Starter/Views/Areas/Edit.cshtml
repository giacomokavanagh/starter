@model Starter.Models.Area

@{
    ViewData["Title"] = "Edit Area: " + Model.Name;
}

<div>
    <div class="headertwo">
        <h2>@ViewData["Title"]</h2>
    </div>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AreaID" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control textarea" rows="5">Description</textarea>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlatformID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="PlatformID" asp-items="ViewBag.Platforms" class="chosen"></select>
                    <span asp-validation-for="PlatformID" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <hr />

    <div>
        <p>
            <a class="Actions" asp-action="Details" asp-route-id="AreaID">Back to Area: @Model.Name</a>
        </p>
        <p>
            <a class="Actions" asp-controller="Platforms" asp-action="Details" asp-route-id="@Model.PlatformID">Back to parent platform: @Model.Platform.Name</a>
        </p>
    </div>

</div>

